<% if request.post? %>
  Thanks for submitting the form!  Here are your answers:<br>
  Name: <%= @answer.name %><br>
  Do you like Chocolate? <%= @answer.chocolate ? "Yes!" : "No" %><br>
  Do you like Rainbows? <%= @answer.rainbows ? "Yes!" : "No" %><br>
  Do you like Puppies? <%= @answer.puppies ? "Yes!" : "No" %><br>
  Do you like Cold Hard Cash? <%= @answer.cold_hard_cash ? "Yes!" : "No" %><br>
<% else %>
  <%= form_for(@answer, url: home_form_path) do |f| %>
    <div>
      Name: <%= f.text_field :name %>
    </div>
    <div>
      Favorites:
      <ul>
        <li class="item">
          <%= f.check_box :chocolate %> I like <%= f.label :chocolate %>
        </li>
        <li class="item">
          <%= f.check_box :rainbows %> I like <%= f.label :rainbows %>
        </li>
        <li class="item">
          <%= f.check_box :puppies %> I like <%= f.label :puppies %>
        </li>
        <li class="item">
          <%= f.check_box :cold_hard_cash %> I like <%= f.label :cold_hard_cash %>
        </li>
      </ul>
    </div>
    <%= f.submit %>
  <% end %>
<% end %>
